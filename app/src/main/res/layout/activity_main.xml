<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/catLayout"
        android:layout_width="379dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="#7E57C2"
        app:cardBackgroundColor="#7E57C2"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/estaticosLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/estaticosLayout"
        app:layout_constraintTop_toBottomOf="@+id/estaticosLayout">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/estaticosLayout"
        android:layout_width="379dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="#26C6DA"
        app:cardBackgroundColor="#29B6F6"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/ingresosLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gastosLayout"
        app:layout_constraintTop_toBottomOf="@+id/ingresosLayout">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/gastosLayout"
        android:layout_width="187dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#EC407A"
        app:cardBackgroundColor="#EC407A"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ingresosLayout"
        android:layout_width="180dp"
        android:layout_height="127dp"
        android:layout_marginEnd="16dp"
        android:background="#CB24B627"
        app:cardBackgroundColor="#39BB41"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gastosLayout">

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>